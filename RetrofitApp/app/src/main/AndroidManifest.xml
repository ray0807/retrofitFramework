<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.bm.projectxxx">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomTranslucent" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.LocalImageListActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.FrescoActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.NetworkImageListActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.DialogActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.TestOverlayActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.TestFragmentActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>
